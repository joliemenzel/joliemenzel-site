{# Collect portfolio items and build facet list #}
{% set items  = collections.posts | withTag('site_portfolio') | sortByOrder %}
{% set facets = items | facetTags(['site_portfolio']) %}

{# Persistent filter bar (links to /tagged/<facet>/ pages) #}
<div class="filter">
  <a class="pill active" href="/tagged/site_portfolio/">All</a>
  {% for t in facets %}
    <a class="pill" href="/tagged/{{ t | slugify }}/">{{ t }}</a>
  {% endfor %}
</div>

