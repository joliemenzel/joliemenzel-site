<div class="page-body" id="contact-page">
  <h1>Contact</h1>
  <p>Have a project, opportunity, or question? Send a note below.</p>

  <!-- Cloudflare Turnstile -->
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

  <form id="contactForm"
        class="contact-form"
        action="https://script.google.com/macros/s/AKfycbw4-pbRUhWQgo2e452YCAu7lGICI7DEv2kpqMPTtDFmyFZ_IRjUPKHnzKDTCTKxyTPKVQ/exec"
        method="POST">

    {# Honeypot: invisible to humans, catches basic bots #}
    <div style="position:absolute; left:-9999px; opacity:0;">
      <label>Leave this blank
        <input type="text" name="_gotcha" autocomplete="off" tabindex="-1">
      </label>
    </div>

    {# Optional: redirect back to your site after success
       <input type="hidden" name="redirect" value="https://beta.joliemenzel.com/contact/thanks/">
    #}

    <div class="field">
      <label for="name">Name <span aria-hidden="true">*</span></label>
      <input id="name" name="name" type="text" required autocomplete="name">
    </div>

    <div class="field">
      <label for="email">Email <span aria-hidden="true">*</span></label>
      <input id="email" name="email" type="email" required autocomplete="email">
    </div>

    <div class="field">
      <label for="message">Message <span aria-hidden="true">*</span></label>
      <textarea id="message" name="message" rows="6" required></textarea>
    </div>

    <!-- Turnstile widget + hidden token field -->
    <div id="captchaWrap">
      <input type="hidden" id="cfToken" name="cf-turnstile-response" value="">
      <div class="cf-turnstile"
           data-sitekey="0x4AAAAAAB5MKNBoSZ0fhmm_"
           data-callback="cfSolved"
           data-expired-callback="cfExpired"
           data-error-callback="cfError"></div>
      <small id="captchaHint" class="hint">Please verify you’re human to enable “Send”.</small>
    </div>

    <button id="sendBtn" class="btn btn-outline" type="submit" disabled>Send</button>
  </form>
</div>

<script>
  // Turnstile gating: keep Send disabled until the captcha returns a token
  const btn  = document.getElementById('sendBtn');
  const hint = document.getElementById('captchaHint');
  const form = document.getElementById('contactForm');
  const tok  = document.getElementById('cfToken');

  // Called by Turnstile when solved (token passed as arg)
  window.cfSolved = function(token){
    tok.value = token;
    btn.disabled = false;
    hint.textContent = 'Great—captcha verified.';
  };

  // Expired/error: clear token and disable again
  window.cfExpired = function(){
    tok.value = '';
    btn.disabled = true;
    hint.textContent = 'Captcha expired—please re-check the box.';
  };
  window.cfError = function(){
    tok.value = '';
    btn.disabled = true;
    hint.textContent = 'Captcha error—please reload the page and try again.';
  };

  // Guard submit if somehow no token is present
  form.addEventListener('submit', function(e){
    if (!tok.value) {
      e.preventDefault();
      btn.disabled = true;
      hint.textContent = 'Please complete the captcha before sending.';
    }
  });
</script>

<style>
.contact-form{ max-width: 720px; }
.field{ margin: 12px 0; display: grid; gap: 6px; }
.field input, .field textarea{
  width: 100%; padding: 10px 12px; font: inherit; background: #fff;
  border: 1px solid var(--smallBorders); border-radius: 6px;
}
#sendBtn[disabled]{ opacity: .6; cursor: not-allowed; }
#captchaWrap{ margin: 12px 0; }
.hint{ display: block; font-size: .9em; color: var(--smallMuted, #666); margin-top: 6px; }
</style>
